	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#1A7ED0">
	        
	<LinearLayout
	    android:id="@+id/linear1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#1A7ED0"
	    android:orientation="vertical"
	    android:weightSum="100">
	    
	    <TextView 
	        android:id="@+id/head"
	        android:layout_width="match_parent"
